@model TradeScope.Domain.Models.SettingsViewModel
@inject TradeScope.Localization.ITranslationService T

@{
    ViewData["Title"] = T["Settings"];
}

<section class="ts-section">
    <div class="ts-card">
        <div class="ts-card-header">
            <span class="ts-card-title">@T["MainParameters"]</span>
            <span class="ts-card-subtitle">Mock inicial para layout · salvará no futuro</span>
        </div>
        <div class="ts-card-body">
            <form class="ts-settings-form">
                <div class="ts-settings-grid">
                    <div class="ts-settings-group">
                        <h3>@T["CapitalAndRisk"]</h3>
                        <label>@T["InitialCapital"]</label>
                        <input type="number" value="@Model.InitialCapital" />

                        <label>@T["RiskPerTradePercentLabel"]</label>
                        <input type="number" step="0.01" value="@Model.RiskPerTradePercent" />
                    </div>

                    <div class="ts-settings-group">
                        <h3>@T["TradesPerPhase"]</h3>
                        <label>@T["Phase1Aggressive"]</label>
                        <input type="number" value="@Model.Phase1TradesPerDay" />

                        <label>@T["Phase2Moderate"]</label>
                        <input type="number" value="@Model.Phase2TradesPerDay" />

                        <label>@T["Phase3Conservative"]</label>
                        <input type="number" value="@Model.Phase3TradesPerDay" />
                    </div>

                    <div class="ts-settings-group">
                        <h3>@T["PointsTargets"]</h3>
                        <label>Mini-índice (WIN)</label>
                        <input type="number" value="@Model.WinTargetPoints" />

                        <label>@T["DollarLabel"] (WDO)</label>
                        <input type="number" value="@Model.DolarTargetPoints" />

                        <label>@T["NasdaqLabel"] (US100)</label>
                        <input type="number" value="@Model.NasdaqTargetPoints" />
                    </div>

                    <div class="ts-settings-group">
                        <h3>@T["Withdrawals"]</h3>
                        <label>Retirada mês 2</label>
                        <input type="number" value="@Model.Month2Withdrawal" />

                        <label>@T["MonthlyIncrement"]</label>
                        <input type="number" value="@Model.WithdrawalIncrement" />

                        <label>@T["MaxWithdrawal"]</label>
                        <input type="number" value="@Model.MaxWithdrawal" />
                    </div>
                </div>

                <div class="ts-settings-actions">
                    <button type="button" class="ts-chip ts-chip-outline">@T["SaveLabel"]</button>
                </div>
            </form>
        </div>
    </div>
</section>
