@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@using TradeScope.Helpers
@inject TradeScope.Localization.ITranslationService T


@{
    var appTitle = "TradeScope";
    var currentCulture = CultureInfo.CurrentUICulture;
    var isRtl = currentCulture.TwoLetterISOLanguageName == "ar";

    //var returnUrl = (ViewData["ReturnUrl"] as string)
    //            ?? (Context.Request.Path + Context.Request.QueryString);
}

<!DOCTYPE html>
<html lang="@currentCulture.TwoLetterISOLanguageName" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @appTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="ts-body">
    <div class="ts-app-shell">
        <!-- Sidebar -->
        <aside class="ts-sidebar">
            <div class="ts-brand">
                <div class="ts-brand-icon">
                    <span class="ts-brand-scope"></span>
                </div>
                <div class="ts-brand-text">
                    <span class="ts-brand-title">TradeScope</span>
                    <span class="ts-brand-subtitle">
                        @T["TradeMonitoring"]
                    </span>
                </div>
            </div>

            <nav class="ts-nav">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Home","Index")">
                    @T["Dashboard"]
                </a>

                <a asp-controller="Asset"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Asset","Index")">
                    @T["AssetLabel"]
                </a>

                <a asp-controller="Operations"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Operations","Index")">
                    @T["TradeJournal"]
                </a>

                <a asp-controller="Risk"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Risk","Index")">
                    @T["RiskAndGrowth"]
                </a>

                <a asp-controller="Analytics"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Analytics","Index")">
                    @T["AssetAnalytics"]
                </a>

                <a asp-controller="Settings"
                   asp-action="Index"
                   class="ts-nav-item @Html.IsActive("Settings","Index")">
                    @T["Settings"]
                </a>
            </nav>

        </aside>

        <!-- Main -->
        <div class="ts-main">
            <!-- Topbar -->
            <header class="ts-topbar">
                <div class="ts-topbar-left">
                    <h1 class="ts-topbar-title">@ViewData["Title"]</h1>
                    <span class="ts-topbar-subtitle">
                        @T["GlobalSubtitle"]
                    </span>
                </div>
                <div class="ts-topbar-right">
                    <div class="ts-topbar-right">
                        <form asp-controller="Localization" asp-action="SetLanguage" method="post" class="ts-lang-form">
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                            <select name="culture" class="ts-lang-select" onchange="this.form.submit()">
                                <option value="en" selected="@(currentCulture.TwoLetterISOLanguageName == "en")">English</option>
                                <option value="pt" selected="@(currentCulture.TwoLetterISOLanguageName == "pt")">Português</option>
                                <option value="es" selected="@(currentCulture.TwoLetterISOLanguageName == "es")">Español</option>
                                <option value="zh" selected="@(currentCulture.TwoLetterISOLanguageName == "zh")">中文</option>
                                <option value="hi" selected="@(currentCulture.TwoLetterISOLanguageName == "hi")">हिन्दी</option>
                                <option value="ar" selected="@(currentCulture.TwoLetterISOLanguageName == "ar")">العربية</option>
                                <option value="ru" selected="@(currentCulture.TwoLetterISOLanguageName == "ru")">Русский</option>
                            </select>
                        </form>

                        <div class="ts-user">
                            <div class="ts-user-avatar">AN</div>
                            <div class="ts-user-info">
                                <span class="ts-user-name">Alison Nunes</span>
                                <span class="ts-user-role">Trader &amp; Quant</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <main class="ts-content">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
