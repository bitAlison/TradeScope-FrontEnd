@using System.Globalization
@inject TradeScope.Localization.ITranslationService T

@{
    var appTitle = "TradeScope";
    var currentCulture = CultureInfo.CurrentUICulture;
    var isRtl = currentCulture.TwoLetterISOLanguageName == "ar";
}

<!DOCTYPE html>
<html lang="@currentCulture.TwoLetterISOLanguageName" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @appTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tradescope.css" asp-append-version="true" />
</head>
<body class="ts-body">
    <div class="ts-shell">
        <aside class="ts-sidebar">
            <div class="ts-sidebar-brand">
                <div class="ts-logo">TS</div>
                <div>
                    <div class="ts-brand-title">@appTitle</div>
                    <div class="ts-brand-subtitle">@T["TradeMonitoring"]</div>
                </div>
            </div>

            <nav class="ts-nav">
                <a asp-controller="Home" asp-action="Index" class="ts-nav-item">
                    @T["Dashboard"]
                </a>
                <a asp-controller="Operations" asp-action="Index" class="ts-nav-item">
                    @T["TradeJournal"]
                </a>
                <a asp-controller="Risk" asp-action="Index" class="ts-nav-item">
                    @T["RiskAndGrowth"]
                </a>
                <a asp-controller="Analytics" asp-action="Index" class="ts-nav-item">
                    @T["AssetAnalytics"]
                </a>
                <a asp-controller="Settings" asp-action="Index" class="ts-nav-item">
                    @T["Settings"]
                </a>
            </nav>

            <div class="ts-sidebar-footer">
                <span class="ts-sidebar-footer-title">@T["Mode"]</span>
                <span class="ts-sidebar-footer-tag">@T["Phase1Aggressive"]</span>
            </div>
        </aside>

        <main class="ts-main">
            <header class="ts-topbar">
                <div class="ts-topbar-left">
                    <div class="ts-page-title">@ViewData["Title"]</div>
                </div>

                <div class="ts-topbar-right">
                    <form asp-controller="Localization" asp-action="SetLanguage" method="post" class="ts-lang-form">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <select name="culture" class="ts-lang-select" onchange="this.form.submit()">
                            <option value="en" selected="@(currentCulture.TwoLetterISOLanguageName == "en")">English</option>
                            <option value="pt" selected="@(currentCulture.TwoLetterISOLanguageName == "pt")">Português</option>
                            <option value="es" selected="@(currentCulture.TwoLetterISOLanguageName == "es")">Español</option>
                            <option value="zh" selected="@(currentCulture.TwoLetterISOLanguageName == "zh")">中文</option>
                            <option value="hi" selected="@(currentCulture.TwoLetterISOLanguageName == "hi")">हिन्दी</option>
                            <option value="ar" selected="@(currentCulture.TwoLetterISOLanguageName == "ar")">العربية</option>
                            <option value="ru" selected="@(currentCulture.TwoLetterISOLanguageName == "ru")">Русский</option>
                        </select>
                    </form>
                </div>
            </header>

            <div class="ts-content">
                @RenderBody()
            </div>

            <footer class="ts-footer">
                <span>TradeScope © @DateTime.Now.Year</span>
            </footer>
        </main>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
